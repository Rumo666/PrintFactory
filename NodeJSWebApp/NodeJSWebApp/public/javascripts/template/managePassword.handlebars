<div class="men">
    <div id="formEdit" class="new_product_form">
        <h2>Manage Your Password</h2>
        <form id="manageForm" role="form">
            <div class="row_6">
                <div class="form-group">
                    <label for="lbName">User Name:</label>
                    <input name="UserName" type="text" disabled="disabled" class="text form-control" value="{{user.username}}" />
                    <input name="UserID" type="hidden" value="{{user._id}}" />
                </div>
                <div class="form-group">
                    <label for="lbName">Old Password:</label>
                    <input name="OldPassword" type="password" class="text form-control" />
                </div>
                <div class="form-group">
                    <label for="lbPrice">New Password:</label>
                    <input name="NewPassword" type="password" class="text form-control"/>
                </div>
                <div class="form-group">
                    <label for="lbDes">Confirm Password:</label>
                    <input name="ConfirmPassword" type="password" class="form-control"/>
                </div>
            </div>
            <input name="submit" type="submit" id="submitPassword" value="Save New Password">
            <div class="clearfix"></div>
        </form>
    </div>
</div>